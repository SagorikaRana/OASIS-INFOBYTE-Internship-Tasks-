<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/textField"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/allIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:padding="5dp"
            android:maxLines="1"
            android:gravity="end"
            android:textColor="#4D869C"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allIn"
            android:gravity="right"
            android:padding="5dp"
            android:text="0"
            android:maxLines="3"
            android:textColor="#4D869C"
            android:textSize="60sp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/keys1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_C"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EA152F"
                android:text="C"
                android:textColor="#EEF7FF"
                android:textSize="35sp"
                app:cornerRadius="45dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_AC"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EA152F"
                android:text="AC"
                android:textColor="#EEF7FF"
                android:textSize="19sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_equals"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="160dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EA152F"
                android:text="="
                android:textColor="#EEF7FF"
                android:textSize="30sp"
                app:cornerRadius="45dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/keys2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="1"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="2"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="3"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_devide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D869C"
                android:text="/"
                android:textColor="#EEF7FF"
                android:textSize="40sp"
                app:cornerRadius="45dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/keys3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="4"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="5"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="6"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_multiply"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D869C"
                android:text="*"
                android:textSize="40sp"
                app:cornerRadius="45dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/keys4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="7"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="8"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="9"
                android:textColor="#4D869C"
                android:textSize="35sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D869C"
                android:text="-"
                android:textSize="30sp"
                app:cornerRadius="45dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keys5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="160dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="0"
                android:textColor="#4D869C"
                android:textSize="30sp"
                app:cornerRadius="45dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#EEF7FF"
                android:text="."
                android:textColor="#4D869C"
                android:textSize="40sp"
                app:cornerRadius="45dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/key_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4D869C"
                android:text="+"
                android:textSize="30sp"
                app:cornerRadius="45dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>